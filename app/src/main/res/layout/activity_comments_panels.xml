<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".CommentsPanels">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imageView"
            android:layout_width="35dp"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/chats" />

        <EditText
                android:layout_width="250dp"
                android:id="@+id/edittextcomnt"
                 android:background="@drawable/comments"
                  android:padding="10dp"
            android:layout_weight="1"
                  android:textSize="18sp"
                 android:textColorHint="@color/black"
                  android:textColor="@color/black"
                 android:hint="Type your comments"
                     android:layout_height="wrap_content"
            >

        </EditText>

    <ImageView
        android:id="@+id/sentimg"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/sendss" />


</LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/comntreceiver"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>